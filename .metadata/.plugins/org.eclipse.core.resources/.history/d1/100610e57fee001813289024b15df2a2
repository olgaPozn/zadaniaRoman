package ArraysAndStrings;

public class UniqueCharacterString {
	//solution without using data structures (bitswitch)
	boolean uniqueCharacters(String str){
		int checker = 0; //a-z string
		
		for(int i = 0; i < str.length(); i++){
			int bitAtIndex = str.charAt(i) - 'a';
			if((checker & (1 << bitAtIndex)) > 0)
				return false;
			checker = checker | (1 << bitAtIndex);
		}
		return true;	
	}
	protected static void displayUniqueCharacters(String input){
		UniqueCharacterString test = new UniqueCharacterString();
		if(test.uniqueCharacters(input))
			System.out.println("unique string");
		else
			System.out.println("duplicate string");
	}
	
	//solution using additional data structures
	
	public static void main (String args[]){
		displayUniqueCharacters("aab");		
	}
}
