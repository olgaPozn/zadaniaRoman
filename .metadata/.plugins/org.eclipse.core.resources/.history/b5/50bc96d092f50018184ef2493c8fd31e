package DeckOfCards;

import java.util.ArrayList;

public class Hand <T extends Card> {


	private ArrayList<T> cards = new ArrayList<T>();

	public void addCard(T card) {
		cards.add(card);
	}
	
	public int score(){
		int score = 0;
		for (T card : cards){
			score += card.getRankValue();
		}
		return score;
	}
	
	public String showHand(){
		String str = "";
		for (T c : cards){
			str += c.toString() + " \n";
		}
		return str;
	}

}
